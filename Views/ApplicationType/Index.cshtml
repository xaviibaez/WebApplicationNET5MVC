@* Lo que recibimos del controller *@
@model IEnumerable<WebApplicationNET.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            @*Hacemos un enlace a controller Category accion Create*@
            <a asp-action="Create" class="btn btn-primary">
                Create New Applicaton Type
            </a>
        </div>
    </div>

    <br /><br />

    @* Podemos usar codigo C# con el @, el Model ira con la M mayus *@
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type</p>
    }
</div>
